{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2016", "dom"],
    "module": "none",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "types": ["types"]
    }
  },
  "include": ["src/**/*", "types/max.d.ts"]
}
